{% extends '@AcMarcheSport/layout.html.twig' %}

{% block body -%}

    <div class="card">
        <div class="card-header">
            <h3>Nouveau participant</h3>
        </div>
        <div class="card-body">

            <div class="alert alert-info">
                Entrez vos coordonnées puis choisissez vos activités
            </div>

            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row">
                <div class="col-6">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.surname) }}
                </div>
            </div>
            {{ form_widget(form) }}

            <button class="btn btn-primary mr-1 mb-2" type="submit"><i class="far fa-save" aria-hidden="true"></i>
                Sauvegarder
            </button>

            {{ form_end(form) }}

        </div>
        <div class="card-footer">

        </div>
    </div>

{% endblock %}
